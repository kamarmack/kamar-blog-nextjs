{
	"author": "Kamar Mack <https://github.com/kamarmack>",
	"bugs": "https://github.com/kamarmack/mackbook-io-nextjs/issues",
	"dependencies": {
		"@sindresorhus/slugify": "^2.1.0",
		"clsx": "^1.1.1",
		"date-fns": "^2.28.0",
		"gray-matter": "^4.0.3",
		"next": "12.0.8",
		"next-mdx-remote": "^3.1.0-alpha.2",
		"next-remote-watch": "https://github.com/hashicorp/next-remote-watch.git",
		"next-themes": "^0.0.15",
		"prism-react-renderer": "^1.2.1",
		"react": "17.0.2",
		"react-children-utilities": "^2.6.3",
		"react-dom": "17.0.2",
		"react-feather": "^2.0.9",
		"rehype-prism-plus": "^1.3.1"
	},
	"devDependencies": {
		"@mdx-js/react": "^2.1.1",
		"@tailwindcss/typography": "^0.5.0",
		"@types/node": "17.0.8",
		"@types/react": "17.0.38",
		"@typescript-eslint/eslint-plugin": "^5.15.0",
		"@typescript-eslint/parser": "^5.15.0",
		"autoprefixer": "^10.4.2",
		"eslint": "^8.11.0",
		"eslint-config-next": "12.0.8",
		"eslint-config-prettier": "^8.5.0",
		"eslint-import-resolver-typescript": "^2.5.0",
		"eslint-plugin-import": "^2.25.4",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-promise": "^6.0.0",
		"postcss": "^8.4.5",
		"prettier": "2.5.1",
		"tailwindcss": "^3.0.15",
		"typescript": "^4.6.2"
	},
	"description": "NextJS Portfolio and Blog Site",
	"engines": {
		"node": ">=11.14"
	},
	"homepage": "https://mackbook.io",
	"keywords": [
		"ci",
		"git",
		"github",
		"javascript",
		"npm",
		"typescript"
	],
	"license": "MIT",
	"name": "mackbook-io-nextjs",
	"prettier": {
		"arrowParens": "always",
		"bracketSpacing": true,
		"bracketSameLine": false,
		"printWidth": 80,
		"quoteProps": "as-needed",
		"semi": true,
		"singleQuote": true,
		"tabWidth": 2,
		"trailingComma": "all",
		"useTabs": true
	},
	"private": true,
	"repository": {
		"type": "git",
		"url": "git://github.com/kamarmack/mackbook-io-nextjs.git"
	},
	"scripts": {
		"dev": "next dev",
		"dev:watch": "next-remote-watch ../posts",
		"clean-cache": "rm -rf .next",
		"clean-deps": "rm -rf node_modules",
		"clean-export": "rm -rf out",
		"clean-build": "npm run clean-cache && npm run clean-export",
		"prebuild": "npm run clean-build",
		"build": "next build && next export",
		"start": "next start",
		"ts-silent-build": "tsc --project ./tsconfig.json --noEmit",
		"prelint": "npm run ts-silent-build",
		"lint": "next lint",
		"prettify": "npx prettier --write .",
		"validate": "git pull --ff-only && npm i && npm run lint",
		"stage-local-changes": "doctoc . && npm run prettify && git add .",
		"push-local-changes": "git push && git push --tags",
		"presync": "npm run validate",
		"sync": "npm run stage-local-changes && git commit",
		"postsync": "npm run push-local-changes",
		"preversion": "npm run validate",
		"version": "auto-changelog -p && npm run stage-local-changes",
		"postversion": "npm run push-local-changes && npm run build && firebase deploy"
	},
	"version": "1.1.1"
}
